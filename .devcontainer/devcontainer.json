{
  "name": "Hello World Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Hello World App",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "npm install && echo 'ðŸŽ‰ Dev container ready! Run: npm run dev'",
  "postStartCommand": "echo 'ðŸš€ Container started! Your app will be at http://localhost:3000'",
  
  "remoteUser": "vscode"
}
